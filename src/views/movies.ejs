<% include partials/_header %>
<div class="container">
        <div class="row">
          <div class="col-md-12 text-center mx-auto">
            <h1 style="color: white;">Movies</h1>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 mx-auto text-center">
            <button class="btn btn-warning" onclick="location.href='/newMovie'">Agregar +</button>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 mx-auto text-center">
            <table class="table table-dark table-bordered table-hover">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Movie Name</th>
                  <th scope="col">Movie Description</th>
                  <th scope="col">Movie Release Date</th>
                  <th scope="col">Movie Run Time</th>
                  <th scope="col">Movie Certificate</th>
                  <th scope="col">Movie Rating</th>
                  <th scope="col">Editar</th>
                  <th scope="col">Eliminar</th>
                </tr>
              </thead>
              <tbody>
                    <% if (data) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= data[i].movieID %></td>
                                <td><%= data[i].movieTitle %></td>
                                <td><%= data[i].movieDesc %></td>
                                <td><%= data[i].movieReleaseDate %></td>
                                <td><%= data[i].movieRuntime %></td>
                                <td><%= data[i].movieCertificate %></td>
                                <td><%= data[i].movieRating %></td>
                                <td><a class="btn btn-info" type="button" href="/update/<%= data[i].movieID %>">Editar</a></td>
                                <td><a class="btn btn-danger" type="button" href="/delete/<%= data[i].movieID %>">Eliminar</a></td>
                            </tr>
                        <% } %>
                    <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <% include partials/_header %>